@model MVCFilters.viewmodel.ForgetPassword
@{
    /**/

    ViewBag.Title = "Forget";
}

@if (ViewBag.stage == 0)
{
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            @using (Html.BeginForm("Forget"))
            {
                <div class="form-group">
                    <h3>Please Enter you Register Email .</h3>

                    <input type="text" class="form-control" name="email" />
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(model => model.Email);
                    <p>@ViewBag.message</p>
                </div>

                <div class="form-group">
                    <input type="submit" value="Send OTP" class="btn btn-info" />
                </div>
            }

        </div>
    </div>
}
else if (ViewBag.stage == 1)
{
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            @using (Html.BeginForm("validateOtp", "Account", FormMethod.Post))
            {
                <div class="form-group">
                    <h3>Please Enter OTP .</h3>

                    <input type="text" class="form-control" name="otp" />
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(model => model.Email);
                    <p>@ViewBag.message</p>
                </div>

                <div class="form-group">
                    <input type="submit" value="Submit OTP" class="btn btn-info" />
                </div>
            }

        </div>
    </div>
}
else if (ViewBag.stage == 2)
{
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
            {
                <div class="form-group">
                    <h3>Please Enter New password .</h3>
                    <input type="text" class="form-control" name="password" />
                </div>
                <div class="form-group">
                    <h3>Please Enter Confirm password .</h3>
                    <input type="text" class="form-control" name="confirmPassword" />
                </div>
                <div class="form-group">
                  
                    <p>@ViewBag.message</p>
                </div>

                <div class="form-group">
                    <input type="submit" value="Change Password" class="btn btn-info" />
                </div>
            }

        </div>
    </div>
}
else if (ViewBag.stage == 3)
{
    <h2>Your password reset successfully... @Html.ActionLink("click here", "Login", "Account") to login</h2>
}
else {
    <h2>There is some thing wrong ! goto @Html.ActionLink("Login", "Login", "Account")</h2>
}